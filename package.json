  "scripts": {
    "prisma:dev:deploy": "npx prisma migrate deploy",
    "db:dev:rm": "rm -rf ./prisma/database/dev/*",
    "db:dev:restart": "npm run db:dev:rm && npm run prisma:dev:deploy",
    "prisma:test:deploy": "dotenv -e .env.test -- npx prisma migrate deploy",
    "db:test:rm": "rm -rf ./prisma/database/test/*",
    "db:test:restart": "npm run db:test:rm && npm run prisma:test:deploy",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.10",
    "@nestjs/config": "^3.1.1",
